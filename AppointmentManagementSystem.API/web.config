<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- WebDAV modülünü kaldır - POST isteklerini engelliyor -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>
    
    <!-- WebDAV handler'ı kaldır -->
    <handlers>
      <remove name="WebDAV" />
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
      <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
    </handlers>
    
    <aspNetCore processPath="dotnet" 
                arguments=".\AppointmentManagementSystem.API.dll" 
                stdoutLogEnabled="false" 
                stdoutLogFile=".\logs\stdout" 
                hostingModel="inprocess" />
    
    <!-- HTTP Methods izinleri -->
    <security>
      <requestFiltering>
        <verbs>
          <add verb="POST" allowed="true" />
          <add verb="GET" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="DELETE" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
          <add verb="PATCH" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>
    
    <!-- CORS headers KALDIRILDI - ASP.NET Core middleware üzerinden yönetiliyor -->
  </system.webServer>
</configuration>
