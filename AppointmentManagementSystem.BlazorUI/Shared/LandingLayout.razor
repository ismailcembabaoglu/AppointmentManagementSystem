<style>
    /* Base styles */
    * {
        box-sizing: border-box;
    }

    /* Prevent all horizontal overflow and keep the page scrollable */
    html,
    body {
        width: 100%;
        max-width: 100vw;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        min-height: 100vh;
        height: auto;
        overflow-y: auto;
    }

    /* Fix for all Radzen components */
    .rz-layout,
    .rz-header,
    .rz-body,
    .rz-footer,
    .rz-stack,
    .rz-row {
        max-width: 100vw !important;
        overflow-x: hidden;
    }

    /* Mobile specific global fixes */
    @@media (max-width: 768px) {
        /* Prevent text overflow */
        h1, h2, h3, h4, h5, h6, p, span, div {
            word-wrap: break-word;
            overflow-wrap: break-word;
            hyphens: auto;
        }

        /* Ensure images don't overflow */
        img {
            max-width: 100%;
            height: auto;
        }

        /* Fix for any absolute positioned elements */
        [style*="position: absolute"] {
            max-width: 100vw;
        }
    }

    /* Header always on top */
    .rz-header {
        z-index: 9999 !important;
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
    }

    /* Responsive Navigation */
    .header-content {
        padding: 12px 20px !important;
        width: 100%;
        max-width: 100%;
        overflow: hidden;
        position: relative;
        z-index: 10000;
    }

    @@media (max-width: 768px) {
        /* Header fixed positioning on mobile */
        .rz-header {
            height: auto !important;
            min-height: 60px;
        }

        .header-content {
            padding: 8px 12px !important;
            gap: 8px !important;
            min-height: 60px;
        }

        /* Body padding adjustment for mobile */
        .rz-body {
            padding-top: 60px !important;
        }

        .desktop-nav {
            display: none !important;
        }
        
        .logo-text {
            display: none !important;
        }
        
        .mobile-menu-btn {
            display: flex !important;
        }
        
        .auth-buttons {
            display: none !important;
        }

        /* Header brand on mobile */
        .header-brand {
            display: flex !important;
            flex: 1;
            min-width: 0;
        }

        .brand-text {
            display: none !important;
        }

        /* Menu toggle button */
        .menu-toggle-btn {
            flex-shrink: 0;
            width: 44px;
            height: 44px;
        }
    }

    @@media (min-width: 769px) {
        .mobile-menu-btn {
            display: none !important;
        }

        .logo-text {
            display: block !important;
        }
    }

    .mobile-menu {
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        animation: slideDown 0.3s ease;
        width: 100%;
        max-width: 100vw;
        overflow-x: hidden;
        position: relative;
        z-index: 9998;
    }

    .mobile-menu .rz-stack {
        width: 100%;
        max-width: 100%;
    }

    .mobile-nav-link {
        color: var(--rz-text-color);
        text-decoration: none;
        font-weight: 500;
        padding: 12px 16px;
        border-radius: 8px;
        transition: all 0.3s;
        display: block;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .mobile-nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: var(--rz-primary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .mobile-nav-link:hover {
        background: rgba(102, 126, 234, 0.1);
        color: var(--rz-primary);
        transform: translateX(8px);
    }

    .mobile-nav-link:hover::before {
        transform: scaleY(1);
    }

    .nav-link {
        position: relative;
        padding-bottom: 4px;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--rz-primary);
        transition: width 0.3s ease;
    }

    .nav-link:hover {
        color: var(--rz-primary) !important;
    }

    .nav-link:hover::after {
        width: 100%;
    }

