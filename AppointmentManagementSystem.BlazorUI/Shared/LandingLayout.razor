<style>
    /* Base styles */
    * {
        box-sizing: border-box;
    }

    /* Responsive Navigation */
    .header-content {
        padding: 12px 20px !important;
        width: 100%;
        max-width: 100%;
        overflow: hidden;
    }

    @@media (max-width: 768px) {
        .header-content {
            padding: 8px 12px !important;
            gap: 8px !important;
        }

        .desktop-nav {
            display: none !important;
        }
        
        .logo-text {
            display: none !important;
        }
        
        .mobile-menu-btn {
            display: flex !important;
        }
        
        .auth-buttons {
            display: none !important;
        }

        /* Header brand on mobile */
        .header-brand {
            display: flex !important;
            flex: 1;
            min-width: 0;
        }

        .brand-text {
            display: none !important;
        }

        /* Menu toggle button */
        .menu-toggle-btn {
            flex-shrink: 0;
        }
    }

    @@media (min-width: 769px) {
        .mobile-menu-btn {
            display: none !important;
        }

        .logo-text {
            display: block !important;
        }
    }

    .mobile-menu {
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        animation: slideDown 0.3s ease;
    }

    .mobile-nav-link {
        color: var(--rz-text-color);
        text-decoration: none;
        font-weight: 500;
        padding: 12px 16px;
        border-radius: 8px;
        transition: all 0.3s;
        display: block;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .mobile-nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: var(--rz-primary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .mobile-nav-link:hover {
        background: rgba(102, 126, 234, 0.1);
        color: var(--rz-primary);
        transform: translateX(8px);
    }

    .mobile-nav-link:hover::before {
        transform: scaleY(1);
    }

    .nav-link {
        position: relative;
        padding-bottom: 4px;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--rz-primary);
        transition: width 0.3s ease;
    }

    .nav-link:hover {
        color: var(--rz-primary) !important;
    }

    .nav-link:hover::after {
        width: 100%;
    }

    .footer-link {
        color: rgba(255,255,255,0.7);
        text-decoration: none;
        font-size: 15px;
        transition: all 0.3s;
        display: inline-block;
    }

    .footer-link:hover {
        color: white;
        transform: translateX(5px);
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Smooth Scroll */
    html {
        scroll-behavior: smooth;
    }

    /* Scroll offset for fixed header */
    #hero, #features, #how-it-works, #categories {
        scroll-margin-top: 100px;
    }

    /* Body reset */
    body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        #hero, #features, #how-it-works, #categories {
            scroll-margin-top: 80px;
        }
    }

    .btn-compact {
        padding: 8px 20px !important;
        font-size: 14px !important;
    }

    @@media (max-width: 480px) {
        .btn-compact {
            font-size: 13px !important;
            padding: 6px 14px !important;
        }
    }

    /* Mobile Footer Adjustments */
    @@media (max-width: 768px) {
        .rz-footer {
            padding: 30px 16px 16px !important;
        }

        .footer-link {
            font-size: 14px !important;
        }

        /* Footer content wrapper */
        .rz-footer > div {
            max-width: 100%;
            overflow: hidden;
        }

        /* Footer columns on mobile */
        .rz-row {
            margin-left: 0 !important;
            margin-right: 0 !important;
        }

        .rz-col {
            padding-left: 8px !important;
            padding-right: 8px !important;
        }

        /* Footer text wrapping */
        .rz-text {
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        /* Social icons container */
        .rz-stack-horizontal {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>

@code {
    private bool mobileMenuOpen = false;
    private int hoveredSocial = -1;

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }

    private async Task ScrollToSection(string sectionId)
    {
        Console.WriteLine($"üéØ C# ScrollToSection called with: {sectionId}");
        Console.WriteLine($"üìç Current URI: {Navigation.Uri}");
        
        try
        {
            // Check if we're on home page
            var currentPath = new Uri(Navigation.Uri).AbsolutePath;
            Console.WriteLine($"üìç Current path: {currentPath}");
            
            if (currentPath != "/")
            {
                // Navigate to home first, then scroll
                Console.WriteLine($"üîÑ Not on home page, navigating to /{sectionId}");
                Navigation.NavigateTo($"/{sectionId}");
            }
            else
            {
                // We're on home page, just scroll
                Console.WriteLine($"‚úÖ On home page, scrolling...");
                
                // Close mobile menu first if open
                if (mobileMenuOpen)
                {
                    mobileMenuOpen = false;
                    StateHasChanged();
                }
                
                // Wait a bit for DOM to be ready
                await Task.Delay(100);
                
                // Try V2 first (simpler, more direct)
                Console.WriteLine($"üöÄ Trying scrollToElement (V2)...");
                var success = await JSRuntime.InvokeAsync<bool>("scrollToElement", sectionId);
                
                if (!success)
                {
                    // Fallback to V1
                    Console.WriteLine($"‚ö†Ô∏è V2 failed, trying V1...");
                    await JSRuntime.InvokeVoidAsync("smoothScrollTo", sectionId);
                }
                
                Console.WriteLine($"‚úÖ Scroll function called successfully");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"‚ùå Error in ScrollToSection: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            
            // Last resort fallback
            try
            {
                Console.WriteLine($"üîÑ Last resort: trying smoothScrollToSimple...");
                await JSRuntime.InvokeVoidAsync("smoothScrollToSimple", sectionId);
            }
            catch (Exception ex2)
            {
                Console.WriteLine($"‚ùå All methods failed: {ex2.Message}");
            }
        }
    }

    private async Task ScrollToTop()
    {
        await ScrollToSection("#hero");
    }

    private void HoverSocial(int index)
    {
        hoveredSocial = index;
    }
}
