    private void StartManualLock()
    {
        manualLockCts?.Cancel();
        manualLockCts?.Dispose();
        manualLockCts = new CancellationTokenSource();

        manualSelectionAt = DateTime.UtcNow;

        _ = Task.Run(async () =>
        {
            try
            {
                await Task.Delay(manualLockDuration, manualLockCts.Token);
            }
            catch (TaskCanceledException)
            {
                return;
            }

            manualSelectionAt = null;
            await InvokeAsync(StateHasChanged);
        });
    }

