            flex-shrink: 0;
            width: 44px;
            height: 44px;
        }
    }

    @@media (min-width: 769px) {
        .mobile-menu-btn {
            display: none !important;
        }

        .logo-text {
            display: block !important;
        }
    }

    .mobile-menu {
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        animation: slideDown 0.3s ease;
        width: 100%;
        max-width: 100vw;
        overflow-x: hidden;
        position: relative;
        z-index: 9998;
    }

    .mobile-menu .rz-stack {
        width: 100%;
        max-width: 100%;
    }

    .mobile-nav-link {
        color: var(--rz-text-color);
        text-decoration: none;
        font-weight: 500;
        padding: 12px 16px;
        border-radius: 8px;
        transition: all 0.3s;
        display: block;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .mobile-nav-link::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 4px;
        background: var(--rz-primary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .mobile-nav-link:hover {
        background: rgba(102, 126, 234, 0.1);
        color: var(--rz-primary);
        transform: translateX(8px);
    }

    .mobile-nav-link:hover::before {
        transform: scaleY(1);
    }

    .mobile-nav-link.active {
        background: linear-gradient(120deg, rgba(102, 126, 234, 0.12), rgba(118, 75, 162, 0.16));
        color: var(--rz-primary);
        font-weight: 700;
    }

    .mobile-nav-link.active::before {
        transform: scaleY(1);
    }

    .nav-link {
        position: relative;
        padding: 8px 4px;
        border-radius: 10px;
        transition: all 0.25s ease;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 4px;
        left: 12px;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 999px;
        transition: width 0.3s ease, left 0.3s ease;
    }

    .nav-link:hover {
        color: var(--rz-primary) !important;
        transform: translateY(-2px);
    }

    .nav-link:hover::after {
        width: 70%;
        left: 15%;
    }

    .nav-link.active {
