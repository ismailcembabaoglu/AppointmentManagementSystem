<style>
    /* Base styles */
    * {
        box-sizing: border-box;
    }

    /* Prevent all horizontal overflow and keep the page scrollable */
    html,
    body {
        width: 100%;
        max-width: 100vw;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        min-height: 100vh;
        height: auto;
        overflow-y: auto;
    }

    /* Fix for all Radzen components */
    .rz-layout,
    .rz-header,
    .rz-body,
    .rz-footer,
    .rz-stack,
    .rz-row {
        max-width: 100vw !important;
        overflow-x: hidden;
    }

    /* Mobile specific global fixes */
    @@media (max-width: 768px) {
        /* Prevent text overflow */
        h1, h2, h3, h4, h5, h6, p, span, div {
            word-wrap: break-word;
            overflow-wrap: break-word;
            hyphens: auto;
        }

        /* Ensure images don't overflow */
        img {
            max-width: 100%;
            height: auto;
        }

        /* Fix for any absolute positioned elements */
        [style*="position: absolute"] {
            max-width: 100vw;
        }
    }

    /* Header always on top */
    .rz-header {
        z-index: 9999 !important;
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
    }

    /* Responsive Navigation */
    .header-content {
        padding: 12px 20px !important;
        width: 100%;
        max-width: 100%;
        overflow: hidden;
        position: relative;
        z-index: 10000;
    }

    .auth-buttons .rz-button {
        border-radius: 12px;
        padding: 8px 16px;
        font-weight: 700;
        letter-spacing: 0.2px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .auth-buttons .rz-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(102, 126, 234, 0.18);
    }

    .auth-buttons .rz-button.rz-primary {
        background: linear-gradient(120deg, #667eea, #764ba2);
        border: none;
    }

    .auth-buttons .rz-button.rz-light {
        border: 1px solid rgba(102, 126, 234, 0.2);
        color: var(--rz-text-color);
        background: white;
    }

    @@media (max-width: 768px) {
        /* Header fixed positioning on mobile */
        .rz-header {
            height: auto !important;
            min-height: 60px;
        }

        .header-content {
            padding: 8px 12px !important;
            gap: 8px !important;
            min-height: 60px;
        }

