    private string GetPhotoDataUri(string base64Data)
    {
        if (string.IsNullOrWhiteSpace(base64Data))
            return string.Empty;

        var normalized = base64Data.Trim();

        // Check if already has data URI prefix
        if (normalized.StartsWith("data:image/", StringComparison.OrdinalIgnoreCase))
            return normalized;

        // Add data URI prefix for Base64 images
        return $"data:image/jpeg;base64,{normalized}";
    }

