@page "/verify-email"
@using AppointmentManagementSystem.BlazorUI.Services
@inject IApiService ApiService
@inject NavigationManager NavigationManager

<PageTitle>Email Doğrulama - Aptiva Plan</PageTitle>

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0" style="border-radius: 20px;">
                    <div class="card-body p-5 text-center">
                        @if (isLoading)
                        {
                            <div class="mb-4">
                                <div class="spinner-border text-primary" role="status" style="width: 4rem; height: 4rem;">
                                    <span class="visually-hidden">Yükleniyor...</span>
                                </div>
                            </div>
                            <h3 class="mb-3">Email Doğrulanıyor...</h3>
                            <p class="text-muted">Lütfen bekleyin, email adresiniz doğrulanıyor.</p>
                        }
                        else if (isSuccess)
                        {
                            <div class="mb-4">
                                <div class="rounded-circle bg-success d-inline-flex align-items-center justify-content-center" 
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-check-lg text-white" style="font-size: 3rem;"></i>
                                </div>
                            </div>
                            <h2 class="text-success mb-3">✓ Email Doğrulandı!</h2>
                            <p class="text-muted mb-4">@message</p>
                            <p class="mb-4">Hesabınız aktif edildi. Artık giriş yapabilirsiniz.</p>
                            <button class="btn btn-primary btn-lg px-5" @onclick="GoToLogin" style="border-radius: 50px;">
                                Giriş Yap
                            </button>
                        }
                        else
                        {
                            <div class="mb-4">
                                <div class="rounded-circle bg-danger d-inline-flex align-items-center justify-content-center" 
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-x-lg text-white" style="font-size: 3rem;"></i>
                                </div>
                            </div>
                            <h2 class="text-danger mb-3">Doğrulama Başarısız</h2>
                            <p class="text-muted mb-4">@message</p>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary" @onclick="GoToHome">
                                    Ana Sayfaya Dön
                                </button>
                                <button class="btn btn-outline-secondary" @onclick="GoToLogin">
                                    Giriş Yap
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "token")]
    public string? Token { get; set; }

    private bool isLoading = true;
    private bool isSuccess = false;
    private string message = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Token))
        {
            isLoading = false;
            isSuccess = false;
            message = "Geçersiz doğrulama linki. Token bulunamadı.";
            return;
        }

        try
        {
            var result = await ApiService.VerifyEmailAsync(Token);
            
            isLoading = false;
            isSuccess = result.Success;
            message = result.Message ?? (result.Success ? "Email başarıyla doğrulandı!" : "Doğrulama başarısız oldu.");
        }
        catch (Exception ex)
        {
            isLoading = false;
            isSuccess = false;
            message = $"Bir hata oluştu: {ex.Message}";
        }
    }

    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void GoToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}
